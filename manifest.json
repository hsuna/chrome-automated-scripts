{
  "manifest_version": 2,
  "name": "自动回复",
  "version": "0.0.1",
  "author": "hsuna",
  "description": "游戏后台客服反馈系统-自动回复",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "自动回复",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.shiyuegame.com/*"],
      "css": [],
      "js": ["js/lib/jq.min.js", "js/inject.js"]
    }
  ]
}
